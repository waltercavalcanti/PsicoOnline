@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@modoEscuro" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation="1">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => AlternarGaveta())" />
		<MudText Typo="Typo.h5" Class="ml-3">PsicoOnline</MudText>
		<MudSpacer />
		<MudSwitch @bind-Checked="@modoEscuro" Color="Color.Primary" T="bool" Label="Alternar modo claro/escuro" />
	</MudAppBar>
	<MudDrawer @bind-Open="gavetaAberta" ClipMode="DrawerClipMode.Always" Elevation="2">
		<NavMenu />
	</MudDrawer>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.Large">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>
